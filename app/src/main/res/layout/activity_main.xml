<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="50dp"
    android:layout_marginHorizontal="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:gravity="right"
        android:textSize="40sp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        />
    <Space android:id="@+id/dummy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn0"
        android:layout_toLeftOf="@id/btn2"
        android:textSize="30sp"
        android:text="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn0"
        android:layout_toLeftOf="@id/dummy"
        android:textSize="30sp"
        android:text="2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn0"
        android:layout_toRightOf="@id/dummy"
        android:textSize="30sp"
        android:text="3" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn1"
        android:layout_toLeftOf="@id/btn5"
        android:textSize="30sp"
        android:text="4" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn1"
        android:layout_toLeftOf="@id/dummy"
        android:textSize="30sp"
        android:text="5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn3"
        android:layout_toRightOf="@+id/btn5"
        android:textSize="30sp"
        android:text="6" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn4"
        android:layout_toLeftOf="@id/btn8"
        android:textSize="30sp"
        android:text="7" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn4"
        android:layout_toLeftOf="@id/dummy"
        android:textSize="30sp"
        android:text="8" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn6"
        android:layout_toRightOf="@id/btn8"
        android:textSize="30sp"
        android:text="9" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/btndec"
        android:textSize="30sp"
        android:text="0" />
    <Button
        android:id="@+id/btndec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/dummy"
        android:textSize="30sp"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:text="." />
    <Button
        android:id="@+id/btnclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btndec"
        android:textSize="30sp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:text="C" />
    <Button
        android:id="@+id/btnplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnclear"
        android:textSize="30sp"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:text="+" />
    <Button
        android:id="@+id/btnminus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnplus"
        android:layout_toRightOf="@+id/btn3"
        android:textSize="30sp"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:text="-" />
    <Button
        android:id="@+id/btnmultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnminus"
        android:layout_toRightOf="@+id/btnclear"
        android:textSize="30sp"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:text="x" />
    <Button
        android:id="@+id/btndivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnmultiply"
        android:layout_toRightOf="@+id/btn9"
        android:textSize="30sp"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:text="/" />

    <Button
        android:id="@+id/btnequal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/btn9"
        android:textSize="30sp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@id/dummy"
        android:layout_alignRight="@id/btndivide"
        android:text="=" />

    <Button
        android:id="@+id/btnexponent"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn7"
        android:layout_toLeftOf="@id/dummy"
        android:textSize="30sp"
        android:text="x^" />



</RelativeLayout>